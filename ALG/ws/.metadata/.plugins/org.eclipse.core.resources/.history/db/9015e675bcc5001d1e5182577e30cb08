package algestudiante.p4;

public class DefensaTiempos {

	private static int[] asignar;
	
	public static void main(String[] args) {
		final int MAX_VALUE = 2000000;
		int nVeces = 100;
		
		System.out.println("n\tt\tnVeces\tlength");
		for(int n = 40960; n < MAX_VALUE; n*=2) {
			int[] enemigos = Defensa.generarEnemigos(n);
			int[] defensores = Defensa.generarGrupoDefensa(n);
			Defensa def = new Defensa(n, enemigos, defensores);
			long t1 = System.currentTimeMillis();
			for (int repeticiones=1; repeticiones<=nVeces;repeticiones++)
			{ 
				asignar = def.asignar();
			} 
			long t2 = System.currentTimeMillis();
			System.out.println(n + "\t" + (t2-t1) + "\t" + nVeces + "\t" + asignar.length);
		}
	}

}
